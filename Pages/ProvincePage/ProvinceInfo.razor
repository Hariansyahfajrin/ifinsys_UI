@page "/commonmasterfile/province/add"
@page "/commonmasterfile/province/{ID}"

@using IFinancing360_SYS_UI.Components.SysProvinceComponent
@using IFinancing360_SYS_UI.Components.SysCityComponent
<Card>
	<Title Text="Province Info" />

	<SysProvinceForm ID="@ID" />

	@if (ID != null)
	{
		<Divider />
