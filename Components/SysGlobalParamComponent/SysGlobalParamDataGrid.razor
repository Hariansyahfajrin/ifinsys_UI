<RadzenStack>
  <!-- #region Toolbar -->
  <RadzenRow Gap="8">
    <RadzenButton ButtonStyle="ButtonStyle.Primary" Text="Add" Click="@Add" />
    <RadzenButton ButtonStyle="ButtonStyle.Danger" Text="Delete" Click="@Delete"  />
  </RadzenRow>
  <!-- #endregion -->

  <!-- #region List Data -->
  <DataGrid ID="GlobalParamDataGrid" @ref=@dataGrid TItem="SysGlobalParamModel" LoadData="LoadData"
    AllowSelected="true">
    <DataGridColumn TItem="SysGlobalParamModel" Property="Code" Title="Code" Width="20%" TextAlign="TextAlign.Center"
      Link="@(row => $"/controlpanel/globalparam/{row.ID}")" />
    <DataGridColumn TItem="SysGlobalParamModel" Property="Description" Title="Description" Width="40%" />
    <DataGridColumn TItem="SysGlobalParamModel" Property="Value" Title="Value" Width="20%" />
    <DataGridColumn TItem="SysGlobalParamModel" Property="IsEditable" Title="Editable" Width="20%" FormatString="YN" />
  </DataGrid>
  <!-- #endregion -->
</RadzenStack>