<!-- #region Form -->
<RadzenTemplateForm TItem="SysEmployeePositionModel" Data="@row" Submit=@OnSubmit>
  <RadzenStack>
    <!-- #region Toolbar -->
    <RadzenRow Gap="8">
      <RadzenButton ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Primary" Text="Save" />
      <RadzenButton ButtonStyle="ButtonStyle.Danger" Text="Back" Click="@Back" />
    </RadzenRow>
    <!-- #endregion -->

    <RadzenStack>
      <RadzenRow>
        <!-- #region EmployeeName -->
        <FormFieldTextBox Label="Employee Name" Name="EmployeeName" @bind-Value="@employeeMain.Name" Disabled />
        <!-- #endregion -->

        <!-- #region EmployeeNIK -->
        <FormFieldTextBox Label="Employee NIK" Name="EmployeeNIK" @bind-Value="@employeeMain.NIK" Disabled />
        <!-- #endregion -->
      </RadzenRow>

      <RadzenRow>
        <!-- #region Code -->
        <FormFieldTextBox Label="Code" Name="Code" @bind-Value="@row.Code" Max="50" Disabled
          Placeholder="Auto Generated" />
        <!-- #endregion -->

        <!-- #region Department -->
        <FormFieldButtonLookup Name="PositionID" Label="Position" Target="positionLookup" @bind-Value="@row.PositionID"
          @bind-Text="@row.PositionDescription" Required="true" />
        <!-- #endregion -->

        <!-- #region Is Active -->
        <FormFieldSwitch Name="IsBasePosition" Label="Base Position" @bind-Value="@row.IsBasePosition" />
        <!-- #endregion -->
      </RadzenRow>

    </RadzenStack>
  </RadzenStack>
</RadzenTemplateForm>
<!-- #endregion -->



<!-- #region Department Lookup -->
<SingleSelectLookup ID="PositionLookup" @ref="@positionLookup" TItem="SysPositionModel" LoadData="LoadPositionLookup"
  Title="Position List" Select="(select) => {
								row.PositionID = select.ID;
								row.PositionDescription = select.Description;
							}">
  <DataGridColumn TItem="SysPositionModel" Property="Description" Title="Description" />
</SingleSelectLookup>
<!-- #endregion -->
